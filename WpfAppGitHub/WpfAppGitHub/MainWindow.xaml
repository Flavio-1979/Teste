<Window x:Class="WpfAppGitHub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppGitHub"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FF1D1A1A">
        <Button x:Name="Button_Get_Message" Content="Obter mensagem" HorizontalAlignment="Center" Margin="0,208,0,0" VerticalAlignment="Top" Width="240" Height="40" Background="#FF0F17D1" BorderBrush="White" Foreground="White" FontSize="16" Click="Button_Get_Message_Click"/>
        <Button x:Name="Button_Close" Content="Fechar" HorizontalAlignment="Center" Margin="0,278,0,0" VerticalAlignment="Top" Width="240" Height="40" Background="#FF0F17D1" BorderBrush="White" Foreground="White" FontSize="16" Click="Button_Close_Click"/>

    </Grid>
</Window>
